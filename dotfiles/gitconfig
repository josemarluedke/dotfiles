[core]
	excludesfile = ~/.gitignore
  pager = less -FRSX
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[color "status"]
  added = green
  changed = yellow
  untracked = red
[alias]
  c = checkout
  s = status
  ci = commit -m
  ca = commit -am
  p = push
  pu = pull
  undo-commit = reset --soft HEAD^
  l = "log --graph --pretty=\"format:%C(yellow)%h%Cred%d%Creset %s %C(white) %C(cyan)%an%Creset, %C(green)%ar%Creset\""
[push]
	default = current
[pull]
	default = current
